<mvc:View controllerName="stellar.trezor-workaround.controller.Page" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.core" displayBlock="false">
        <Page title="Trezor">

            <Input maxLength="56" id="publicKey" width="35em" />
            <Button text="Load" icon="sap-icon://key" press="loadAccount" />
            <List id="claimableOverview" includeItemInSelection="true" 
            selectionChange="selectionChangeClaimable" mode="SingleSelect" class="sapUiSizeCompact" items="{ path: 'claimables' }" 
                headerText="Claimable balances ">
                <items>
                    <StandardListItem  iconDensityAware="false"  
                    title="{ path: 'asset' } {amount}" 
                    info="{predicate/status}" 
                    icon="{ path: 'icon'}"></StandardListItem>
                </items>
                </List>
        </Page>
</mvc:View>